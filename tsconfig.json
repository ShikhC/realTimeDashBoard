{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es6",
    "lib": [ "es2017", "esnext.asynciterable"],
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "declaration": false,
    "noImplicitAny": false,
    "outDir": ".compiled",
    "skipLibCheck": true,
    "typeRoots": ["node_modules/@types/"],
    "types": ["node"]
  },
  "include": [
    "index.ts",
    "local.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}